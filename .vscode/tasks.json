{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clean Configure and Build with emcmake",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "rm -rf build && mkdir build && cd build && emcmake cmake .. -DCMAKE_BUILD_TYPE=Debug && cmake --build ."
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run emrun",
      "type": "shell",
      "command": "emrun",
      "args": [
        "--no_browser",
        "--port=8080",
        "${workspaceFolder}/build"
      ],
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}